{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["/**/*.ts", "/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
